<div class="preferenceForm">
    <main>
        <h1>Tell us what you like</h1>
        <form action="/home" method="POST" id="preferences-form">
            <label for="gender-input"> Gender: </label>
            <label for="g1">Male</label>
            <input type="radio" name="gender" value="male" id="g1">
            <label for="g2">Female</label>
            <input type="radio" name="gender" value="female" id="g2">
            <label for="g3">Other</label>
            <input type="radio" name="gender" value="other" id="g3"><br>
            <div class="error-msg" id="gender-missing">
                <i class="fa fa-times-circle"></i>
                Gender is required!
            </div>

            <label for="dob-input">Birthday: </label>
            <input type="date" name="dob" id="dob-input"><br>
            <div class="error-msg" id="birthday-missing">
                <i class="fa fa-times-circle"></i>
                Birthday is required!
            </div>

            <label for="countryId">Destination: </label>
            <select name="country" class="countries" id="countryId">
                <option value="">Select Country</option>
            </select>
            <select name="state" class="states" id="stateId">
                <option value="">Select State</option>
            </select>
            <select name="city" class="cities" id="cityId">
                <option value="">Select City</option>
            </select><br>
            <div class="error-msg" id="destination-missing">
                <i class="fa fa-times-circle"></i>
                Country, state, and city are required!
            </div>

            <label for="mealPref-input">Meal Preference: </label>
            <label for="mealPref1">Vegan</label>
            <input type="checkbox" name="mealPref" value="vegan" id="mealPref1">
            <label for="mealPref2">Vegetarian</label>
            <input type="checkbox" name="mealPref" value="vegetarian" id="mealPref2">
            <label for="mealPref3">White Meat</label>
            <input type="checkbox" name="mealPref" value="whiteMeat" id="mealPref3">
            <label for="mealPref4">Red Meat</label>
            <input type="checkbox" name="mealPref" value="redMeat" id="mealPref4">
            <label for="mealPref5">Seafood</label>
            <input type="checkbox" name="mealPref" value="seafood" id="mealPref5">
            <label for="mealPref6">Eggs</label>
            <input type="checkbox" name="mealPref" value="eggs" id="mealPref6"><br>
            <div class="error-msg" id="mealPref-missing">
                <i class="fa fa-times-circle"></i>
                Select at least one meal preference!
            </div>

            <label for="tourType-input">Tour type: </label>
            <label for="tourType1">Business</label>
            <input type="checkbox" name="tourType" value="business" id="tourType1">
            <label for="tourType2">Hiking</label>
            <input type="checkbox" name="tourType" value="hiking" id="tourType2">
            <label for="tourType3">Scenic</label>
            <input type="checkbox" name="tourType" value="scenic" id="tourType3">
            <label for="tourType4">Adventure Sports</label>
            <input type="checkbox" name="tourType" value="adventureSports" id="tourType4">
            <label for="tourType5">Historical</label>
            <input type="checkbox" name="tourType" value="historical" id="tourType5">
            <label for="tourType6">Sightseeing</label>
            <input type="checkbox" name="tourType" value="sightseeing" id="tourType6"><br>
            <div class="error-msg" id="tourType-missing">
                <i class="fa fa-times-circle"></i>
                Select at least one tour type!
            </div>


            <label for="travelers-input">Travelers: </label>
            <input type="number" name="nTravelers" id="travelers-input" placeholder="Enter no. of travelers"><br>
            <div class="error-msg" id="ntravelers-missing">
                <i class="fa fa-times-circle"></i>
                Number of travelers is required!
            </div>

            <label for="specialNeeds-input">Special Needs: </label>
            <label for="specialNeeds1">Physical</label>
            <input type="checkbox" name="specialNeeds" value="physical" id="specialNeeds1">
            <label for="specialNeeds2">Developmental</label>
            <input type="checkbox" name="specialNeeds" value="developmental" id="specialNeeds2">
            <label for="specialNeeds3">Behavioral</label>
            <input type="checkbox" name="specialNeeds" value="behavioral" id="specialNeeds3">
            <label for="specialNeeds4">Sensory Impaired</label>
            <input type="checkbox" name="specialNeeds" value="sensoryImpaired" id="specialNeeds4"><br>

            <label for="budget-input">Budget: </label>
            <input type="number" name="budget" id="budget-input" placeholder="Enter your budget"><br>
            <div class="error-msg" id="budget-missing">
                <i class="fa fa-times-circle"></i>
                Budget is required!
            </div>

            <label for="travelStart-input">Travel Start Date: </label>
            <input type="date" name="travelDateStart" id="travelStart-input"><br>
            <div class="error-msg" id="startDate-missing">
                <i class="fa fa-times-circle"></i>
                Trip start date is required!
            </div>

            <label for="travelEnd-input">Travel End Date: </label>
            <input type="date" name="travelDateEnd" id="travelEnd-input"><br>
            <div class="error-msg" id="endDate-missing">
                <i class="fa fa-times-circle"></i>
                Trip end date is required!.
            </div>

            <div class="error-msg" id="invalid-dates">
                <i class="fa fa-times-circle"></i>
                Error! Travel start date cannot be ahead of end date.
            </div>

            <button type="submit">Submit</button>
        </form>
    </main>
</div>