<main>
    <form action="/home" method="POST" id="preferences-form">
        <label for="gender-input"> Gender: </label>
        <input type="radio" name="gender" value="male" id="g1"> Male
        <input type="radio" name="gender" value="female" id="g2"> Female
        <input type="radio" name="gender" value="other" id="g3"> Other<br>
        <div class="error" id="gender-missing" hidden>
            <p>Gender is required!</p>
        </div>

        <label for="dob-input">Birthday: </label>
        <input type="date" name="dob" id="dob-input"><br>
        <div class="error" id="birthday-missing" hidden>
            <p>Birthday is required!</p>
        </div>

        <label for="countryId">Destination: </label>
        <select name="country" class="countries" id="countryId">
            <option value="">Select Country</option>
        </select>
        <select name="state" class="states" id="stateId">
            <option value="">Select State</option>
        </select>
        <select name="city" class="cities" id="cityId">
            <option value="">Select City</option>
        </select><br>
        <div class="error" id="destination-missing" hidden>
            <p>Country, state, and city are required!</p>
        </div>

        <label for="mealPref-input">Meal Preference: </label>
        <input type="checkbox" name="mealPref" value="vegan" id="mealPref1">Vegan
        <input type="checkbox" name="mealPref" value="vegetarian" id="mealPref2">Vegetarian
        <input type="checkbox" name="mealPref" value="whiteMeat" id="mealPref3">White Meat
        <input type="checkbox" name="mealPref" value="redMeat" id="mealPref4">Red Meat
        <input type="checkbox" name="mealPref" value="seafood" id="mealPref5">Seafood
        <input type="checkbox" name="mealPref" value="eggs" id="mealPref6">Eggs<br>
        <div class="error" id="mealPref-missing" hidden>
            <p>Select at least one meal preference!</p>
        </div>

        <label for="tourType-input">Tour type: </label>
        <input type="checkbox" name="tourType" value="business" id="tourType1">Business
        <input type="checkbox" name="tourType" value="hiking" id="tourType2">Hiking
        <input type="checkbox" name="tourType" value="scenic" id="tourType3">Scenic
        <input type="checkbox" name="tourType" value="adventureSports" id="tourType4">Adventure Sports
        <input type="checkbox" name="tourType" value="historical" id="tourType5">Historical
        <input type="checkbox" name="tourType" value="sightseeing" id="tourType6">Sightseeing
        <input type="checkbox" name="tourType" value="culinary" id="tourType7">Culinary<br>
        <div class="error" id="tourType-missing" hidden>
            <p>Select at least one tour type!</p>
        </div>


        <label for="travelers-input">Number of travelers: </label>
        <input type="number" name="nTravelers" id="travelers-input" min="1" max="20"><br>
        <div class="error" id="ntravelers-missing" hidden>
            <p>Number of travelers are required!</p>
        </div>

        <label for="specialNeeds-input">Special Needs: </label>
        <input type="checkbox" name="specialNeeds" value="physical" id="specialNeeds1">Physical
        <input type="checkbox" name="specialNeeds" value="developmental" id="specialNeeds2">Developmental
        <input type="checkbox" name="specialNeeds" value="behavioral" id="specialNeeds3">Behavioral
        <input type="checkbox" name="specialNeeds" value="sensoryImpaired" id="specialNeeds4">Sensory Impaired<br>

        <label for="budget-input">Budget: </label>
        <input type="number" name="budget" id="budget-input"><br>
        <div class="error" id="budget-missing" hidden>
            <p>Budget is required!</p>
        </div>

        <label for="travelStart-input">Travel Start Date: </label>
        <input type="date" name="travelDateStart" id="travelStart-input"><br>
        <div class="error" id="startDate-missing" hidden>
            <p>Trip start date is required!</p>
        </div>

        <label for="travelEnd-input">Travel End Date: </label>
        <input type="date" name="travelDateEnd" id="travelEnd-input"><br>
        <div class="error" id="endDate-missing" hidden>
            <p>Trip end date is required!.</p>
        </div>

        <div class="error" id="invalid-dates" hidden>
            <p>Error! Travel start date cannot be ahead of end date.</p>
        </div>

        <button type="submit">Submit</button>
    </form>
</main>